<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paper"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/settings_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Settings"
        android:textColor="@android:color/darker_gray"
        android:textSize="75sp" />

    <TextView
        android:id="@+id/sound_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Sound"
        android:textColor="@android:color/darker_gray"
        android:textSize="60sp" />

    <TextView
        android:id="@+id/off_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/on_tv"
        android:layout_alignBottom="@+id/on_tv"
        android:layout_alignRight="@+id/settings_tv"
        android:text="OFF"
        android:textColor="@android:color/darker_gray"
        android:textSize="55sp" />

    <TextView
        android:id="@+id/on_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/settings_tv"
        android:layout_below="@+id/sound_tv"
        android:layout_marginTop="24dp"
        android:text="ON"
        android:textColor="@android:color/darker_gray"
        android:textSize="55sp" />

    <TextView
        android:id="@+id/back_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="21dp"
        android:text="Back"
        android:textColor="@android:color/darker_gray"
        android:textSize="55sp" />

</RelativeLayout>